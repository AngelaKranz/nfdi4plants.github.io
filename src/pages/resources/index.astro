---
import SubPageLayout from '../../layouts/SubPageLayout.astro';
import { type MarkdownInstance } from "astro";
const all_files : MarkdownInstance<Record<string,any>> [] = await Astro.glob('../../content/resources/*.md');
const hero : MarkdownInstance<Record<string,any>> = (await Astro.glob('../../content/resources/hero.md'))[0];
---
<SubPageLayout
  title="Resources"
  hero={hero}
  cards={all_files}>
</SubPageLayout>