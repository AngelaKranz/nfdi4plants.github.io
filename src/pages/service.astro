---
import SubPageLayout from '../layouts/SubPageLayout.astro';
import { type MarkdownInstance } from "astro";
const all_files : MarkdownInstance<Record<string,any>> [] = await Astro.glob('../content/service/*.md');
const hero : MarkdownInstance<Record<string,any>> = (await Astro.glob('../content/service/hero.md'))[0];
---
<SubPageLayout
  title="Service"
  hero={hero}
  cards={all_files}>
</SubPageLayout>