---
import SubPageLayout from '../../layouts/SubpageLayout.astro';
import { type MarkdownInstance } from "astro";
const all_files : MarkdownInstance<Record<string,any>> [] = await Astro.glob('../../content/about/*.md');
const hero : MarkdownInstance<Record<string,any>> = (await Astro.glob('../../content/about/hero.md'))[0];
---
<SubPageLayout
  title="About"
  hero={hero}
  cards={all_files}>
</SubPageLayout>